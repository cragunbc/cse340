<% if (title) { %>
<h1><%= title %></h1>
<% } %>

<%-messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="form-wrap">
    <form action="/inv/delete-user" method="post">
        <fieldset>
            <p>Confirm your deletion. This is permanent</p>
            <label>First Name</label>
            <input type="text" id="user_fname" name="account_firstname" required value="<%= account_firstname %>">
            <label>Last Name</label>
            <input type="text" id="user_lname" name="account_lastname" required value="<%= account_lastname %>">
            <label>Email Address</label>
            <input type="email" id="user_account_email" name="account_email" required value="<%= account_email %>">
            <label>Account Type</label>
            <input type="text" id="user_type" name="account_type" required value="<%= account_type %>">
            <input type="hidden" name="account_id" value="<%= account_id %>">
            <input id="signup" type="submit" value="Delete User">
        </fieldset>
    </form>
</div>