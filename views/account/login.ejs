<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%-messages() %>

<div class="form-wrap">
    <form>
        <fieldset>
            <label>Email Address</label>
            <input type="email" id="user_account_email" name="account_email" required>
            <label>Password
                <span id="password-req">*NOTE* - Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
            </label>
            <input type="password" id="user_account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
            <input id="signup" type="submit" value="Login">
            <p id="account-signup">No account? <a href="/account/register">Sign-up</a></p>
        </fieldset>
    </form>
</div>