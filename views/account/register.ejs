<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%-messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="form-wrap">
    <form action="/account/register" method="post">
      <p>*NOTE* - All fields are required</p>
        <fieldset>
            <label>First Name</label>
            <input type="text" id="user_fname" name="account_firstname" required value="<%= locals.account_firstname %>">
            <label>Last Name</label>
            <input type="text" id="user_lname" name="account_lastname" required value="<%= locals.account_lastname %>">
            <label>Email Address</label>
            <input type="email" id="user_account_email" name="account_email" required value="<%= locals.account_email %>">
            <label>Password
              <span id="password-req">*NOTE* - Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
            </label>
            <input type="password" id="user_account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
            <input id="signup" type="submit" value="Register">
        </fieldset>
    </form>
</div>